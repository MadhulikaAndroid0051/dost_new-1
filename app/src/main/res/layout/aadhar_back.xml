<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_aadhar">

    <TextView
        android:id="@+id/tv_adahrback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_color"
        android:text="पता :"
        android:gravity="center"
        android:textSize="16dp"
        android:textAppearance="@style/TextFieldBold"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_aadhar_back_eng"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_aadhar_back_eng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="Address :"
        android:layout_marginTop="64dp"
         android:textAppearance="@style/TextFieldBold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_adahrback"
app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_back_adhar_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_color"
        android:text="XXXXX-XXXXX"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_back_adhar_name_eng"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_adahrback"/>
    <TextView
        android:id="@+id/tv_back_adhar_name_eng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_color"
        android:text="XXXXX-XXXXX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_back_adhar_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_adahrback"/>
    <TextView
        android:id="@+id/tv_adhar_back_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="XXXX XXXX XXXX"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:textAppearance="@style/TextFieldBold"
        android:paddingBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>