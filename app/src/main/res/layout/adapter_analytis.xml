<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:padding="8dp">


        <TextView
            android:id="@+id/tv_Device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Android Develop"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textAppearance="@style/TextFieldBold"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/btn_submit"
            app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="Transaction Date"
            android:textSize="12sp"
            android:textAppearance="@style/TextFieldBold"

            android:textColor="@color/text_color"
            app:layout_constraintEnd_toStartOf="@+id/tv_browser"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Device_name" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="XX XXX XXXX"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
          app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintTop_toBottomOf="@+id/tv_location" />



        <TextView
            android:id="@+id/tv_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="Amount"
            android:drawableLeft="@drawable/browser"
            android:textSize="11sp"
            android:textAppearance="@style/TextFieldBold"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_Device_name" />

        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text="00vcvcbn"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.5"
app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


