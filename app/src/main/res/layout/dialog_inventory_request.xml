<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"

   >
    <include layout="@layout/action_bar"
        android:id="@+id/title"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/tvinvantory_name"
       android:layout_marginStart="16sp"
       android:text="Product"
       android:layout_marginBottom="2dp"
       android:textColor="@color/view_color"/>
    <TextView
        android:id="@+id/tvinvantory_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/box_bg"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:drawablePadding="8dp"
        android:hint="Select"
        android:padding="8dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_leg"
       app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_request"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvinvantory_name"
        android:layout_marginTop="16sp"
        android:background="@drawable/btn_submit"
        android:text="Request"
        android:textSize="14sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>
