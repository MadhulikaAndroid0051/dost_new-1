
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingStart="12dp"
android:paddingEnd="12dp"
android:background="@color/colorPrimaryDark"
android:paddingBottom="16dp">

<TextView
    android:id="@+id/tv_start_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/box_bg"
    android:drawableStart="@drawable/ic_date"
    android:drawablePadding="8dp"
    android:hint="Start Date"
    android:textColorHint="@color/lightgrey"
    android:textColor="@color/white"
    android:padding="8dp"
    app:layout_constraintEnd_toStartOf="@+id/tv_end_date"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tv_end_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:textColor="@color/white"
    android:textColorHint="@color/lightgrey"

    android:background="@drawable/box_bg"
    android:drawableStart="@drawable/ic_date"
    android:drawablePadding="8dp"
    android:hint="End Date"
    android:padding="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/tv_start_date"
    app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:drawablePadding="8dp"
        android:shadowDx="2"
        android:text="Wallet Statement"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textAppearance="@style/TextFieldBold"
        android:textColor="@color/lightgrey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_date" />

    <TextView
        android:id="@+id/tv_statmentSelect"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
       android:padding="8dp"
        android:drawablePadding="8dp"
        android:background="@drawable/box_bg"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:shadowDx="2"
        android:hint="Income Typle"
        android:textColorHint="@color/lightgrey"

        android:shadowDy="2"
        android:shadowRadius="2"
        android:textAppearance="@style/TextFieldBold"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_name" />
<Button
    android:id="@+id/btn_cancel"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:background="@color/lght_grey"
    android:text="Cancel"
android:textSize="12dp"    android:textColor="@color/white"
    app:layout_constraintEnd_toStartOf="@+id/btn_search"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_statmentSelect" />

<Button
    android:id="@+id/btn_search"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:background="@color/colorAccent"
    android:text="Search"
    android:textSize="12dp"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/btn_cancel"
    app:layout_constraintTop_toBottomOf="@+id/tv_statmentSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>
